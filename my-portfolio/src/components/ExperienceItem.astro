---
interface Props {
    title: string;
    city?: string;
    description: string;
    date: string;
}
const { title, description, date, city } = Astro.props;
---

<div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<h3 class="text-lg font-semibold text-yellow-200 opacity-85 mt-2">
    {title}
</h3>
<time class="mb-1 text-base font-normal leading-none text-gray-300">{date}</time
>
<p class="mb-4 text-sm font-normal text-gray-500">
    {city}
</p>
<p class="mb-4 text-base font-normal text-gray-300 text-pretty">
    {description}
</p>
